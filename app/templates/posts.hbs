<div class="container">
  <h1>Blogger</h1>
  <p>Blog posts</p>
  <div class="row">
  <div class="col-md-3">
    <ul>
      {{#each post in model}}
      <li>{{#link-to 'post' post}}{{post.title}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
  {{#if isFormShowing}}
  <form {{action "savePost" on="submit"}} accept-charset="utf-8">
    <div class="form-group">
      <div class="control-group">
        <div class="control-label">
          <label>Post Title</label>
        </div>
        <div class="">
          {{input value=postTitle class="form-control" type="text"}}
        </div>
      </div>
      <div class="control-group">
        <div class="control-label">
          <label>Post Content</label>
        </div>
        <div class="textarea">
          {{textarea value=postContent class="form-control" rows="3"}}
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-default"> Save</button>
  </form>
  {{else}}
  <p>Or <a href="#"{{action "showForm"}}> click here</a> to create posts</p>
  {{/if}}
</div>
